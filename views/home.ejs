<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <title>URL SHORTNER</title>
  </head>
  <body>
    <form action="/post" method="post">
      <input type="text" name="url" />
      <button type="submit">submit</button>
    </form>
    <table>
      <thead>
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% findUrl.forEach(element => { %>
        <tr>
          <td>
            <a href="<%= element.redirectURL %>"><%= element.redirectURL %></a>
          </td>
          " "<br />
          <td class="me-lg-2 gap-3">
            <a href="<%= element.shortURL %>">
              <%= `https://s-url.cyclic.app/${element.shortURL}` %></a
            >
          </td>
          <td><%= element.clicks %></td>
        </tr>

        <% }); %>
      </tbody>
    </table>
  </body>
</html>
