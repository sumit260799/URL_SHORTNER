<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <title>URL Shortner</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Nunito&display=swap");
    </style>
    <style>
      body {
        background-color: rgb(7, 35, 57);
        font-family: "Nunito", sans-serif;
      }
    </style>
  </head>
  <body>
    <div class="container my-5">
      <!-- <form action="/post" method="post"> -->
      <form class="form-inline row container d-flex mx-1 my-4">
        <div class="col-sm-3 col-8 p-0">
          <input
            class="form-control rounded-0"
            type="search"
            placeholder="Search"
            aria-label="Search"
          />
        </div>
        <div class="col-sm-1 col-4 p-0">
          <button class="btn btn-warning rounded-0 text-white" type="submit">
            Submit
          </button>
        </div>
      </form>
      <!-- </form> -->

      <table class="table table-bordered table-responsive border-warning">
        <thead>
          <tr class="text-white">
            <th scope="col">Index</th>
            <th scope="col">Full URL</th>
            <th scope="col">Short URL</th>
            <th scope="col">Clicks</th>
          </tr>
        </thead>
        <tbody class="text-white">
          <% findUrl.forEach((item)=>{ %>
          <tr>
            <th scope="row">1</th>
            <td>
              <a class="list" href="<%= item.redirectURL %>"
                ><%= item.redirectURL %></a
              >
            </td>
            <td>
              <a href="<%= item.shortURL %>">
                <%= `https://s-url.cyclic.app/${item.shortURL}`%></a
              >
            </td>
            <td><%= item.clicks %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"></script>
  </body>
</html>
